<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:padding="16dp">

        <TextView
            android:id="@+id/dobrodosli"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Dobrodošli u aplikaciju mBanking.\nMolimo Vas prijavite se za nastavak"/>

        <EditText
            android:id="@+id/korisnicko_ime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:hint="Korisničko ime" />

        <EditText
            android:id="@+id/lozinka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lozinka"
            android:layout_marginTop="15dp"
            android:inputType="textPassword" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prijava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Prijava"
            android:backgroundTint="@color/grey" />

        <TextView
            android:id="@+id/donthaveaccount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="100dp"
            android:text="Nemate račun? Izradite ga klikom na gumb registracija"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registracija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Registracija"
            android:backgroundTint="@color/grey" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>